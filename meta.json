{
  "$schema": "https://dl.viam.dev/module.schema.json",
  "module_id": "wootter:veml7700",
  "visibility": "public",
  "url": "https://github.com/Wootter/viam-veml7700-module.git",
  "description": "A Viam module for the VEML7700 ambient light sensor on Raspberry Pi",
  "models": [
    {
      "api": "rdk:component:sensor",
      "model": "wootter:sensor:veml7700"
    }
  ],
  "entrypoint": "run.sh",
  "build": {
    "build": "tar -czf module.tar.gz run.sh requirements.txt src",
    "path": "module.tar.gz",
    "arch": ["linux/arm64", "linux/amd64"]
  }
}
